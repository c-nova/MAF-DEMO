# Azure AI Foundry Configuration
# プロジェクト情報（個別設定）
AI_FOUNDRY_ENDPOINT=https://your-resource.services.ai.azure.com/api/projects/your-project
AI_FOUNDRY_SUBSCRIPTION_ID=your-subscription-id
AI_FOUNDRY_RESOURCE_GROUP=your-resource-group
AI_FOUNDRY_PROJECT_NAME=your-project-name

# 接続文字列は使わない
# AI_FOUNDRY_CONNECTION_STRING=

# モデル設定
MODEL_DEPLOYMENT_NAME=gpt-4o

# 認証方式 (Azure CLI / Managed Identity / API Key)
USE_AZURE_CLI_AUTH=true
# AI_FOUNDRY_API_KEY=your-api-key-here

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true
